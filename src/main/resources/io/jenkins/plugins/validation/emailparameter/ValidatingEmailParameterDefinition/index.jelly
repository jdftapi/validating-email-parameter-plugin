<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form"
         xmlns:i="jelly:fmt" xmlns:p="/lib/hudson/project">

    <j:set var="escapeEntryTitleAndDescription" value="false"/>

    <f:entry title="${it.name}" description="${it.formattedDescription}">
        <div name="parameter" description="${it.formattedDescription}">
            <input type="hidden" name="name" value="${it.name}"/>
            <f:textbox name="value" value="${it.defaultValue}"
                       checkUrl="'descriptorByName/io.jenkins.plugins.validation.emailparameter.ValidatingEmailParameterDefinition/validate?domain='+encodeURIComponent(&quot;${it.domain}&quot;)+'&amp;externalEmail='+encodeURIComponent(&quot;${it.externalEmail}&quot;)+'&amp;value='+encodeURIComponent(this.value)"/>
        </div>
    </f:entry>
</j:jelly>
